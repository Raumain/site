{
	"$schema": "https://biomejs.dev/schemas/2.3.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"includes": [
			"./src/components/**/*",
			"./src/routes/**/*",
			"./src/main.tsx"
		],
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"includes": [
			"./src/components/**/*",
			"./src/routes/**/*",
			"./src/main.tsx"
		],
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
